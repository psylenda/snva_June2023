package coreJava2;
import java.util.Scanner;

public class ForLoop2 {
	public static void main(String[] args) {
			
		
		Scanner scanner = new Scanner(System.in);
		String input = "yes";
		for(;input == "yes";) {
			System.out.println("Enter yes/no");
			input = scanner.next();
			if (input == "no") {
				break;
			}
			else {
				System.out.println("Java is Easy to Learn");
			}
		}
		scanner.close();
	}
}
